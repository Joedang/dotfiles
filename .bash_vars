#!/bin/bash
# enable the config file for calc
CALCRC='~/.calcrc'
export CALCRC

EDITOR=/usr/bin/vim
export EDITOR

# add ~/texmf to LaTeX's path:
if [ -d ~/texmf ]
then
	TEXMFHOME="$HOME/texmf"
	export TEXMFHOME
fi

