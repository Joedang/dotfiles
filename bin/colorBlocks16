#!/usr/bin/env bash
h1='\e[4;1m'
rst='\e[0m'

echo -e "$h1 16-color Set $rst"
for fgbg in 3 4 ; do # Foreground / Background
    for color in {0..7} ; do # Colors
        code=$fgbg$color
        # Display the color
        printf "\e[%sm %3s \e[0m" $code $code
    done
    echo # New line
done
 
