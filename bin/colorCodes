#!/usr/bin/env bash
h1='\e[4;1m'
rst='\e[0m'

echo "See man console_codes for more detailed info."
echo "Run colorBlocks16 for examples of fg/bg combinations."
echo "Run colorBlocks256 for examples of 256 colors in the fg and bg."
echo
echo -e "$h1 Resets $rst"
echo "\\e[0m  . . . . . . . . resets all colors and attributes."
echo "\\e[20m through \\e[29m  resets attributes (see below)."
echo "\\e[39m . . . . . . . . resets the foreground color."
echo "\\e[49m . . . . . . . . resets the background color."
echo
echo -e "$h1 Attributes $rst"
echo "Add 20 to an attribute number to get the number that resets it."
echo -e "\\\\e[1m  \e[1mbold/bright\e[0m"
echo -e "\\\\e[2m  \e[2mdim\e[0m"
echo -e "\\\\e[3m  \e[3mitalic (inconsistent support)\e[0m"
echo -e "\\\\e[4m  \e[4munderlined\e[0m"
echo -e "\\\\e[5m  \e[5mblink (not widely supported)\e[0m"
echo -e "\\\\e[7m  \e[7minverted bg/fg\e[0m"
echo -e "\\\\e[8m  \e[8mhidden\e[0m (hidden)"
echo -e "\\\\e[9m  \e[9mstrikethrough (not widely supported)\e[0m"
echo -e "\\\\e[20m \e[20mreset all attributes\e[0m"
echo
echo -e "$h1 Foreground Colors $rst"
echo "The 30s range (30 through 37) defines foreground colors."
echo "The 90s range defines the 16-bit continuations of the 30s."
echo -e "\\\\e[30m \e[30mBlack\e[0m"
echo -e "\\\\e[31m \e[31mRed\e[0m"
echo -e "\\\\e[32m \e[32mGreen\e[0m"
echo -e "\\\\e[33m \e[33mYellow\e[0m"
echo -e "\\\\e[34m \e[34mBlue\e[0m"
echo -e "\\\\e[35m \e[35mMagenta\e[0m"
echo -e "\\\\e[36m \e[36mCyan\e[0m"
echo -e "\\\\e[37m \e[37mLight gray\e[0m"
echo -e "\\\\e[38;5;Nm use color N from the 256-color set (see below)"
echo -e "\\\\e[39m \e[39mDefault\e[0m"
echo -e "\\\\e[90m \e[90mDark gray\e[0m"
echo -e "\\\\e[91m \e[91mLight red\e[0m"
echo -e "\\\\e[92m \e[92mLight green\e[0m"
echo -e "\\\\e[93m \e[93mLight yellow\e[0m"
echo -e "\\\\e[94m \e[94mLight blue\e[0m"
echo -e "\\\\e[95m \e[95mLight magenta\e[0m"
echo -e "\\\\e[96m \e[96mLight cyan\e[0m"
echo -e "\\\\e[97m \e[97mWhite\e[0m"
echo
echo -e "$h1 Background Colors $rst"
echo "The 40s range (40 through 47) defines background colors."
echo "The 100s range defines the 16-bit continuations of the 40s."
echo -e "\\\\e[40m \e[40mBlack\e[0m"
echo -e "\\\\e[41m \e[41mRed\e[0m"
echo -e "\\\\e[42m \e[42mGreen\e[0m"
echo -e "\\\\e[43m \e[43mYellow\e[0m"
echo -e "\\\\e[44m \e[44mBlue\e[0m"
echo -e "\\\\e[45m \e[45mMagenta\e[0m"
echo -e "\\\\e[46m \e[46mCyan\e[0m"
echo -e "\\\\e[47m \e[47mLight gray\e[0m"
echo -e "\\\\e[48;5;Nm use color N from the 256-color set (see below)"
echo -e "\\\\e[49m \e[49mDefault\e[0m"
echo -e "\\\\e[100m \e[100mDark gray\e[0m"
echo -e "\\\\e[101m \e[101mLight red\e[0m"
echo -e "\\\\e[102m \e[102mLight green\e[0m"
echo -e "\\\\e[103m \e[103mLight yellow\e[0m"
echo -e "\\\\e[104m \e[104mLight blue\e[0m"
echo -e "\\\\e[105m \e[105mLight magenta\e[0m"
echo -e "\\\\e[106m \e[106mLight cyan\e[0m"
echo -e "\\\\e[107m \e[107mWhite\e[0m"
echo
echo -e "$h1 256 Colors $rst"
echo "Foregrounds in the 256-color set are specified with \\e[38;5;COLORNUMBERm,"
echo "where COLORNUMBER ranges from 0 to 256. 0 resets to the default foreground."
echo "Similarly, \\e[48;5;COLORNUMBERm sets the background to something from the"
echo "256-color set, ranging from 0 to 256. 0 resets to the default background."
echo "Run colorBlocks256 for examples of 256 colors in the fg and bg."

# if type colorBlocks256 
# then
#     colorBlocks256
# fi

exit 0
