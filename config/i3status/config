wireless _first_ {
        #format_up = "📡 (%quality on %essid) %ip" 
        format_up = "W:%quality %essid" 
        format_down = "" # "📡❌"
}

ethernet _first_ {
        format_up = "E:%ip"
        format_down = "" #"E: down"
}

battery all {
        #format = "⏻%status%percentage%remaining to full %emptytime to empty"
        format = "⏻%status%percentage"
        last_full_capacity = true
        format_down = "❗NO BATTERY❗"
        status_chr =  "🔌"
        status_bat =  "🔋"
        status_unk =  "🤷❓"
        status_full = "🌝"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 15
        threshold_type = "percentage"
        #format_below_threshold = "⏻%status%percentage LOW BATT"
}

cpu_temperature 0 {
        format = "🌡%degrees℃"
        # Why do I need to keep incrementing the ...hwmonX... part of the path?
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
        max_threshold = 75
        format_above_threshold = "🔥🌡%degrees℃"
}

