disk '/' {
        format = "🖴 %percentage_used"
}

disk '/home' {
        format = "🏡 %percentage_used"
}

load {
        format = "🧠 %1min/4"
        max_threshold = "3"
}

memory {
        format = "🐘 %percentage_used"
        threshold_degraded = "15%"
        #format_degraded = "MEMORY < %available"
}

read_file brightness {
        path = "/sys/class/backlight/acpi_video0/brightness"
        color_good = "#EAEAEA"
        format = "🌞 %content/15"
        #format = "%title: %content"
}

read_file covid {
        path = "/home/joedang/.local/status/covid/weeklyPercent"
        color_good = "#EAEAEA"
        format = "😷 %content%"
        #format = "%title: %content"
}

volume master {
        device = "default"
        format = "🔊 %volume"
        format_muted = "🔇"
}

tztime local {
        format = "🕑 %Y-%m-%d %H:%M %a"
}
